{
  "name": "@lightfin/react-native",
  "version": "0.0.4",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Lightfin (https://lightfin.io)",
  "license": "UNLICENSED",
  "description": "React Native component library for trading and fintech",
  "homepage": "https://github.com/lightfin-io/react-native/",
  "keywords": [
    "lightfin",
    "datagrid",
    "finance",
    "trading",
    "fintech",
    "bitcoin",
    "crypto",
    "react",
    "native",
    "orderbook",
    "market depth",
    "sparkline"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:dev": "NODE_ENV=development rollup -c -w",
    "build": "NODE_ENV=production rollup -c",
    "prepare": "yarn build"
  },
  "dependencies": {
    "d3-scale": "^4.0.2",
    "lodash-es": "^4.17.21",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/runtime": "^7.17.9",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/d3-scale": "^4.0.2",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/react-native": "^0.67.4",
    "@types/react-test-renderer": "^17.0.1",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.13.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^27.5.1",
    "metro-react-native-babel-preset": "^0.70.1",
    "react": "^18.0.0",
    "react-native": "0.68.0",
    "react-native-safe-area-context": "^4.2.4",
    "react-native-screens": "^3.13.1",
    "react-native-svg": "^12.3.0",
    "react-test-renderer": "^18.0.0",
    "react-use-websocket": "^3.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.68.0",
    "react-native-svg": "^12.3.0"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "jsdom",
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFiles": [
      "./jest-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@react-native|react-native)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/assetsTransformer.js"
    }
  }
}
